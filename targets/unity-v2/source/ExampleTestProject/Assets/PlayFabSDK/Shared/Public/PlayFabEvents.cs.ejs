        }

        private void OnProcessingErrorEvent(PlayFabRequestCommon request, PlayFabError error)
        {
            //This just forwards the event.
            if (_instance.OnGlobalErrorEvent != null)
            {
                _instance.OnGlobalErrorEvent(request, error);
            }
        }

