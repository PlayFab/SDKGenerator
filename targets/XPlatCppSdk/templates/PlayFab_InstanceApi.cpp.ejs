        auto apiSettings = this->GetSettings();
        if (apiSettings == nullptr)
        {
            if (needsAttribution && !PlayFabSettings::disableAdvertising && PlayFabSettings::advertisingIdType.length() > 0 && PlayFabSettings::advertisingIdValue.length() > 0)
